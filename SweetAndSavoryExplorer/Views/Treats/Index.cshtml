@{
  Layout = "_Layout";
}

@using SweetAndSavoryExplorer.Models;
@model IEnumerable<SweetAndSavoryExplorer.Models.Treat>

<section>
  <h1>Treats</h1>
  <p>Select a treat from the collection below for more details.</p>
</section>
<main>
  @if (Model.Any())
  {
    <ul>
      @foreach (Treat treat in Model)
      {
        <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })
        </li>
      }
    </ul>
  }
  else
  {
    <h3>No treats have been added yet.</h3>
    <p>Check back for updates soon!</p>
  }
  @if (User.Identity.IsAuthenticated)
  {
    <p>@Html.ActionLink("Add new treat", "Create")</p>
  }
</main>