@{
  Layout = "_Layout";
}

@using SweetAndSavoryExplorer.Models;
<section>
  <h1>Flavors</h1>
  <p>Select a flavor from the collection below for more details.</p>
</section>
<main>
  <h2>All Flavors:</h2>
  @if (@Model.Count == 0)
  {
    <h3>No flavors have been added yet.</h3>
    <p>Check back for updates soon!</p>
  }
  <ul>
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId
      })</li>
    }
  </ul>
  @if (User.Identity.IsAuthenticated)
  {
    <p>@Html.ActionLink("Add new flavor", "Create")</p>
  }
</main>