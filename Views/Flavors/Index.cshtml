@{
  Layout = "_Layout";
}

@using SweetAndSavoryExplorer.Models;

<h1>Flavors</h1>

<main>
  @if (@Model.Count == 0)
  {
    <p>No flavors have been added yet!</p>
  }
  <ul>
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id =
      flavor.FlavorId })</li>
    }
  </ul>
</main>
<p>@Html.ActionLink("Add new category", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>