@{
  Layout = "_Layout";
}

@using ToDoList.Models;

<h1>Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
}

<ul>
  @foreach (Flavor category in Model)
  {
    <li>@Html.ActionLink($"{category.Name}", "Details", new { id =
    category.FlavorId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new category", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>